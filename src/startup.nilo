component FeatureCard(icon: String, title: String, description: String, style: {flex: 1, max_width: 360px}) {
    VStack(style: {
        width: 100%,
        background: "#0a0a0a", 
        rounded: 16px, 
        padding: 40px,
        shadow: {blur: 24, offset: [0, 12], color: "#00000060"},
        align: "center",
        gap: 20px
    }) {
        Text("{}", icon, style: {
            font_size: 56px
        })
        
        Text("{}", title, style: {
            font_size: 24px, 
            color: "#ffffff",
        })
        
        Text("{}", description, style: {
            max_width: auto,
            font_size: 16px, 
            color: "#909090",
            align: "center"
        })
    }
}



