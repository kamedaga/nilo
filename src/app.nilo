
flow {
    start: MainMenu
}

timeline MainMenu {
    font: "fonts/NotoSansJP-Regular.ttf"
    VStack(style: {width: 100ww, background: "#000000ff"}) {
        Text("Modern Nilo", style: {font_size: 40px, color: "#ffffff"})
        Spacing(4px)
        Text("🚀Niloと創る新しいUIは完璧ニロ！！！", style: {font_size: 24px, color: "#a7edffff"})
        HStack(style: {width: 90ww}) {
            Spacing(12px)
            SimpleUICard()
            LikeRustCard()
            minimalUICard()
        }
        Text("ニロ君と作る建設的な未来")
        
        VStack(style: {width: 100%, background: "#0B1A2A"}) {
            HotreloadCard()
        }
    

    }
}

component SimpleUICard(style: {width: 30%}) {
    VStack(style: {height: 120px, background: "#0B1A2A", rounded: 2.5px}) {
        Text("シンプルで宣言的ニロ！！", style: {max_width: auto, font_size: 20px, color: "#fff"})
    }
}

component LikeRustCard(style: {width: 30%}) {
    VStack(style: {height: 120px, background: "#0B1A2A", rounded: 2.5px}) {
        Text("Rustとの連携も簡単ニロ！", style: {max_width: auto, font_size: 20px, color: "#fff"})
    }
}

component minimalUICard(style: {width: 30%}) {
    VStack(style: {height: 120px, background: "#0B1A2A", rounded: 2.5px}) {
        Text("簡潔な動的UIニロ！！", style: {max_width: auto, font_size: 20px, color: "#fff"})
    }
}

component HotreloadCard(style: {width: 90%}) {
    VStack(style: {width: 100%, height: 120px, rounded: 2.5px}) {
        Text("ホットリロード対応ニロよ！！", style: {max_width: auto, font_size: 20px, color: "white"})
    }
} 